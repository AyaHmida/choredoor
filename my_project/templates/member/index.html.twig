{% extends 'base.html.twig' %}
{% block stylesheets %} 
   <style> 
      #simpleform { 
         width:600px; 
         border:2px solid grey; 
         padding:14px; 
          margin-left: auto;
         margin-right: auto;
      }  
      #simpleform label { 
           padding-left: 8px;
      font-size: 15px;
      color: #444;
         
      } 
      #simpleform span { 
         font-size:11px; 
         color:grey; 
         width:100px; 
         text-align:center; 
         display:block; 
         
      }  
      #simpleform input { 
        display: block;
      width: 260px;
      height: 30px;
      padding-left: 10px;
      padding-top: 3px;
      padding-bottom: 3px;
      margin: 7px;
      font-size: 17px;
      border-radius: 20px;
      background: rgba(0,0,0,0.05);
      border: none;
      transition: background 0.5s; 
      }  
      #simpleform button { 
        width: 260px;
      height: 50px;
      position: relative;
      display: block;
      margin: 20px auto;
      border-radius: 10px;
      border: none;
      background: #42C2DF;
      color: white;
      font-size: 20px;
      transition: background 0.4s;
      cursor: pointer;
      } 
   </style> 
{% endblock %} 
